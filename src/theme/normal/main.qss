/*================
QPushButton
==================*/
QPushButton
{
    color: #424242;
    background-color: #FAFAFA;
    border: 1px solid #AAAAAA;
    padding-top: 5px;
    padding-bottom: 5px;
    padding-left: 10px;
    padding-right: 10px;
    border-radius: 0px;
    outline: none;
}
QPushButton:disabled
{
    background-color: #DDDDDD;
    border: 1px solid #AAAAAA;
    padding-top: 5px;
    padding-bottom: 5px;
    padding-left: 10px;
    padding-right: 10px;
    border-radius: 0px;
    color: #76797C;
}
QPushButton:pressed
{
    background-color: #FDEDA3;
    border: 1px solid #F2CA58;
    color: 424242;
}
QPushButton:focus {
    background-color: #FAE590;
    border: 1px solid #F2CA58;
    color: 424242;
}
QPushButton:checked{
    background-color: #FDD36A;
    border: 1px solid #F2CA58;
}

QPushButton:hover
{
    background-color:#FDECAD;
    border: 1px solid #F2CA58;
    color: #000;
}

/*================
QComboBox
==================*/
QComboBox
{
    selection-background-color: #FDD36A;
    border: 1px solid #AFAFAA;
    border-radius: 2px;
    padding: 2px;
    min-width: 50px;
}
QComboBox:on
{
    padding-top: 2px;
    padding-left: 4px;
}
QComboBox QAbstractItemView
{
    background-color: #FAFAFA;
    border-radius: 2px;
    border: 1px solid #AFAFAA;
    selection-background-color: #FDD36A;
}

QComboBox::drop-down
{
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 15px;

    border-left-width: 0px;
    border-left-color: #ff0;
    border-left-style: solid;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
}

QComboBox::down-arrow
{
    image: url(./theme/normal/icon/ArrowDown.png);
}


/*================
QLineEdit
==================*/
QLineEdit
,QTextEdit
,QPlainTextEdit
{
    padding: 1px;
    border-style: solid;
    border: 1px solid #AFAFAA;
    border-radius: 2px;
    color: #424242;
}

/*================
QGroupBox
==================*/
QGroupBox {
    border:1px solid #AFAFAA;
    border-radius: 2px;
    margin-top: 20px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding-left: 10px;
    padding-right: 10px;
    padding-top: 10px;
}

/*================
QAbstractScrollArea
==================*/
QAbstractScrollArea
{
    border-radius: 2px;
    border: 1px solid #76797C;
    background-color: transparent;
}
/*================
QMainWindow
==================*/
QMainWindow::separator
{
    background-color: #E3E6E8;
    color: white;
    padding-left: 3px;
    spacing: 2px;
    border: none;
}
QMainWindow::separator:hover
{

    background-color: #C4C6C6;
    color: white;
    padding-left: 3px;
    border: none;
    spacing: 2px;
}
/*================
QHeaderView
==================*/
QHeaderView
{
    border: 1px solid #E3E6E8;
}
QHeaderView::section
{
    background-color: #E3E6E8;
    color: #424242;
    padding: 1px;
    border-right: 1px solid #AFAFAA;
    border-bottom: 1px solid #AFAFAA;
    border-top: none;
    border-left: none;
}
QHeaderView::section:hover
{
    background-color: #FDD36A;
    color: #000;
    padding: 1px;
    border-right: 1px solid #AFAFAA;
    border-bottom: 1px solid #AFAFAA;
    border-top: none;
    border-left: none;
}
